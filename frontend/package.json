{
  "name": "frontend",
  "version": "0.8.5",
  "buildVersion": "0.8.5",
  "description": "Novel Forege",
  "main": "./out/main/index.js",
  "author": "NovelForge Team",
  "homepage": "https://electron-vite.org",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --NoEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "clean": "node -e \"const fs = require('fs'); ['out', 'dist'].forEach(dir => fs.existsSync(dir) && fs.rmSync(dir, { recursive: true, force: true }))\"",
    "build": "npm run clean && npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:win:unsigned": "npm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false CSC_LINK= WIN_CSC_LINK= electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "gen:types": "openapi-typescript http://127.0.0.1:8000/openapi.json -o src/renderer/src/types/generated.d.ts"
  },
  "dependencies": {
    "@antv/g6": "^5.0.51",
    "@codemirror/autocomplete": "^6.18.6",
    "@codemirror/commands": "^6.8.1",
    "@codemirror/lang-markdown": "^6.3.4",
    "@codemirror/language": "^6.11.3",
    "@codemirror/search": "^6.5.11",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.38.1",
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "@element-plus/icons-vue": "^2.3.1",
    "@formily/reactive-vue": "^2.3.7",
    "@formily/vue": "^2.3.7",
    "@types/lodash-es": "^4.17.12",
    "@vue-flow/background": "^1.3.2",
    "@vue-flow/core": "^1.46.4",
    "@vue-flow/node-toolbar": "^1.1.1",
    "axios": "^1.10.0",
    "electron-updater": "^6.6.2",
    "element-plus": "^2.10.4",
    "element-plus-x": "^1.1.11",
    "keytar": "^7.9.0",
    "lodash-es": "^4.17.21",
    "pinia": "^3.0.3",
    "tippy.js": "^6.3.7",
    "vue-element-plus-x": "^1.3.7",
    "vue-i18n": "^11.1.10",
    "vue-router": "^4.0.13"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/node": "^22.14.1",
    "@types/tippy.js": "^6.3.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "cross-env": "^7.0.3",
    "electron": "^35.1.5",
    "electron-builder": "^25.1.8",
    "electron-vite": "^3.1.0",
    "eslint": "^9.24.0",
    "eslint-plugin-vue": "^10.0.0",
    "openapi-typescript": "^7.8.0",
    "png-to-ico": "^2.1.8",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^6.2.6",
    "vue": "^3.5.13",
    "vue-eslint-parser": "^10.1.3",
    "vue-tsc": "^2.2.8"
  }
}
